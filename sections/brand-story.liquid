{{ 'brand-story.css' | asset_url | stylesheet_tag }}

<section class="brand-story">
  <div class="brand-story__container">
    {% comment %} Left side {% endcomment %}
    <div class="brand-story__content">
      <span class="brand-story__our_story_title">
        {{ section.settings.our_story_title }}
      </span>

      <div class="brand-story__heading">
        <strong>{{ section.settings.heading }}</strong>
      </div>

      <div class="brand-story__description">
        {{ section.settings.our_story_description }}
      </div>

      <div class="brand-story__button">
        <a href="{{section.settings.button_link}}">
          <span class="brand-story__button-text">
            {{ section.settings.button_text }}
          </span>
        </a>
      </div>
    </div>

    {% comment %} Right side {% endcomment %}
    <div class="brand-story__images">
      <div>
        {% if section.settings.image_sm %}
          <img
            src="{{section.settings.image_sm |  image_url: width: 400, height: 400}}"
            alt=""
            class="brand-story__image brand-story__image--sm"
            loading="lazy"
            width="300"
            height="300"
          >
        {% endif %}

        {% if section.settings.video_url_setting %}
          <div class="brand-story__image brand-story__image--sm">
            <iframe
              src="https://youtube.com/embed/{{section.settings.video_url_setting.id}}"
              frameborder="0"
              allowfullscreen
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            ></iframe>
          </div>
        {% endif %}
      </div>

      <div class="brand-story__image-right">
        {% if section.settings.image_lg %}
          {{
            section.settings.image_lg
            | image_url: width: 600
            | image_tag:
              class: 'brand-story__image brand-story__image--lg',
              loading: 'lazy',
              widths: '400, 600, 800',
              alt: section.settings.image_lg.alt
          }}
        {% endif %}
      </div>
    </div>
    
  </div>
</section>

{% schema %}
{
  "name": "Brand story",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "our_story_title",
      "label": "Our story",
      "default": " ( Our story )"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "our_story_description",
      "label": "Description"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "text",
      "label": "Button text",
      "id": "button_text"
    },
    {
      "type": "image_picker",
      "id": "image_sm",
      "label": "Small image"
    },
    {
      "type": "video_url",
      "label": "Video URL",
      "id": "video_url_setting",
      "accept": ["youtube"],
      "placeholder": "Youtube URL"
    },
    {
      "type": "image_picker",
      "id": "image_lg",
      "label": "Large image "
    }
  ],
  "presets": [
    {
      "name": "Brand story"
    }
  ]
}
{% endschema %}
